<project name="Adb-Remote-Screen" default="compile" basedir=".">

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>


    <target name="jar">
        <jar destfile="AdbRemoteScreen.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="com.majeur.ars.AdbRemoteScreen"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="AdbRemoteScreen.jar" fork="true"/>
    </target>

</project>
